#include<stdlib.h>
#include<stdio.h>
int **a, n;
void warshall()
{
	int i,j,k;
	for(k=0;k<n;k++)
	{
		for(j=0;j<n;j++)
		{
			for(i=0;i<n;i++)
			{
				a[i][j]=a[i][j]||a[i][k]&&a[k][j];
			}
		}
	}
}

void print_array()
{
	int i,j;
	for(i=0;i<n;i++)
	{
		for(j=0;j<n;j++)
		{
			printf("%d\t",a[i][j]);
		}
		printf("\n");
	}
}

int main()
{
	int i,j;
	printf("number of vertices:");
	scanf("%d",&n);
	a=calloc(n,sizeof(int*));
	for(i=0;i<n;i++)
	{
		a[i]=calloc(n,sizeof(int));
	}
	printf("adjacency matrix:\n");
	for(i=0;i<n;i++)
	{
		for(j=0;j<n;j++)
		{
			scanf("%d",&a[i][j]);
		}
	}
	printf("entered adjacency matrix:\n");
	print_array();
	warshall();
	printf("transitive closure mattrix:\n");
	print_array();
	return 0;
}
	
		
		
